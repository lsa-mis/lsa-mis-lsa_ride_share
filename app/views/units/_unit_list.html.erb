<%= turbo_frame_tag 'units' do %>
  <div class="min-w-full">
    <table class="mi_table">
      <thead class="mi_thead">
        <tr>
          <th class="header_th">Name</th>
          <th class="header_th">Ldap Group</th>
          <td></td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @units.each do |unit| %>
          <tr class="mi_tbody_tr">
            <td class="mi_tbody_td">
              <%= unit.name %>
            </td>
            <td class="mi_tbody_td">
              <%= unit.ldap_group %>
            </td>
            <td>
              <%= link_to 'Edit', edit_unit_path(unit), class: "link_to", data: {turbo_frame: "_top"} %>
            </td>
            <td>
              <%= link_to 'Delete', unit_path(unit), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: "link_to" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
