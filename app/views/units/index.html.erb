<div class="w-full">
  <div class="flex justify-between items-center my-2">
    <h1 class="font-bold text-4xl">Units</h1>
    <%= link_to 'New unit', new_unit_path, class: "primary_button" %>
  </div>

  <%= turbo_frame_tag 'units' do %>
    <div class="min-w-full">
      <table class="mi_table">
        <thead class="mi_thead">
          <tr>
            <th class="header_th">Name</th>
            <th class="header_th">Ldap Group</th>
          </tr>
        </thead>
        <tbody>
          <% @units.each do |unit| %>
            <tr class="mi_tbody_tr">
              <td class="mi_tbody_td">
                <%= link_to unit.name, unit_path(unit), class: "link_to" %>
              </td>
              <td class="mi_tbody_td">
                <%= unit.ldap_group %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
