<%= form_with model: @reservation,
    data: { controller: "editreservation", editreservation_target: "form", action: "submit->editreservation#submitForm" } do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>
      <ul>
        <% reservation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Term:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= @reservation.program.term.name %>
    </p>
  </div>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Program:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= @reservation.program.display_name_with_title %>
    </p>
  </div>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Site:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= @reservation.site.title %>
    </p>
  </div>

  <div class="py-2">
  <label class="body-lg-bold-text">
    Number of People on Trip:
  </label>
  <p class="body-lg-text ml-2 inline-block">
    <%= @number_of_people_on_trip %>
  </p>
</div>
  <input type="hidden" id="unit_id" name="unit_id" value=<%= @unit_id %> data-editreservation-target="unit">

  
    <div>
        <%= form.label :day_start, "Choose a Start Date", class: "fancy_label" %>
        <%= text_field_tag :day_start, @day_start,
          data: {
          controller: "flatpickr",
          flatpickr_date_format: "Y-m-d",
          flatpickr_min_date: @min_date
          }, "data-editreservation-target": "day_start", "data-action": "change->editreservation#availableCars",
          class: "input_text_field"
        %>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
    <div class="py-2">
      <label class="body-lg-bold-text">
        Start Time:
      </label>
      <p class="body-lg-text ml-2 inline-block">
        <%= show_date_time(reservation.start_time) %>
      </p>
    </div>
    <div class="py-2">
      <label class="body-lg-bold-text">
        End Time:
      </label>
      <p class="body-lg-text ml-2 inline-block">
        <%= show_date_time(reservation.end_time)%>
      </p>
    </div>

    <div class="col-span-2">
      <p class="body-sm-text mb-2">
        Select new start and end time if you want to change it
      </p>
    </div>

    <div>
      <label for="start_time" class="fancy_label">Start Time *</label>
      <%= form.select "start_time", options_for_select(all_day_available_time(@day_start, @unit_id)[:begin], selected: @start_time), {include_blank: false}, {class: "input_text_field", 
      "data-editreservation-target": "start_time"} %>

    </div>

    <div>
      <label for="end_time" class="fancy_label">Start Time *</label>
      <%= form.select "end_time", options_for_select(all_day_available_time(@day_start, @unit_id)[:end], selected: @end_time), {include_blank: false}, {class: "input_text_field", 
      "data-editreservation-target": "end_time"} %>
    </div>
    <div class="error_text" id="time_field"></div>
  </div>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Car:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= @reservation.car.car_number %>
    </p>
  </div>

  <div class="mb-4">
      <%= label_tag 'Car *', nil, class: "fancy_label" %>
      <%= select_tag "car_id", options_from_collection_for_select(@cars, :id, :car_number, selected: @car_id), include_blank: "Select Car ...", class: "input_text_field",
      "data-editreservation-target": "car" %>
    </div>
  
    <div class="error_text mb-2" id="car_field"></div>

  <div class="inline">
    <%= form.submit class: "primary_button" %>
  </div>

  <%= link_to reservation_path(@reservation) do %>
    <span class="tertiary_button">Cancel
    <i class="fa fa-times" aria-hidden="true"></i>
    </span>
  <% end %>
<% end %>
