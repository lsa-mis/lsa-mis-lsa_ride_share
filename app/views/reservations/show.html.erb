<div class="mx-auto w-full">
  <div class="grid grid-cols-1 lg:grid-cols-2">
    <div>
      <h1>
        <%= @reservation.program.unit.name %> reservation
      </h1>
      <h2>
        <%= @reservation.program.display_name_with_title %>
      </h2>
    </div>
    <div class="lg:grid lg:justify-items-end py-2">
      <%= link_to 'Edit Reservation', edit_reservation_path(@reservation), class: "primary_button" %>
      <%= link_to 'Edit Drivers and Passengers', add_drivers_path(@reservation), class: "primary_button" %>
    </div>
  </div>
  <div>
    <%= render @reservation %>
  <div>

</div>
