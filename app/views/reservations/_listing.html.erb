<%= turbo_frame_tag 'reservations' do %>
  <div class="min-w-full">
    <table class="mi_table">
      <thead class="border border-l-0 border-r-0 border-gray-um60">
        <tr>
          <th class="header_th">Id</th>
          <th class="header_th">Program</th>
          <th class="header_th">Site</th>
          <th class="header_th">From</th>
          <th class="header_th">To</th>
          <th class="header_th">Reserved By</th>
        </tr>
      </thead>
      <tbody>
        <% @reservations.each do |reservation| %>
          <tr>
            <td class="mi_tbody_td">
              <%= link_to reservation.id, reservation_path(reservation), class: "link_to" %>
            </td>
            <td class="mi_tbody_td">
              <%= reservation.program.title %>
            </td>
            <td class="mi_tbody_td">
              <%= reservation.site.title %>
            </td>
            <td class="mi_tbody_td">
              <%= show_date_time(reservation.start_time) %>
            </td>
            <td class="mi_tbody_td">
              <%= show_date_time(reservation.end_time) %>
            </td>
            <td class="mi_tbody_td">
              <%= show_user_name_by_id(reservation.reserved_by) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
