<%= render_flash_stream %>

<%= turbo_stream.update "new_passenger" do %>
  <%= render "reservations/passengers/students", edit: params[:reservation][:edit] %>
<% end %>

<%= turbo_stream.update "passenger_list" do %>
  <%= render "reservations/passengers/passenger_list", locals: { reservation: @reservation} %>
<% end %>

<% if @reservation.program.non_uofm_passengers %>
  <%= turbo_stream.update "non_uofm_passengers" do %>
    <%= render 'reservations/passengers/non_uofm_passengers' %>
  <% end %>
<% end %>
