<div id="<%= dom_id unit_preference %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= unit_preference.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= unit_preference.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Value:</strong>
    <%= unit_preference.value %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Unit:</strong>
    <%= unit_preference.unit_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this unit preference", unit_preference, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this unit preference', edit_unit_preference_path(unit_preference), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
