<div class="flashes mt-2">
  <% flash.each do |key, value| %>
    <% if key == 'notice' %>
      <%= content_tag(:div, value, class: "flash #{key}", id: "#{key}") %>
    <% end %>
  <% end %>
  <% flash.each do |key, value| %>
    <% if key == 'alert' %>
      <%= content_tag(:div, value, class: "flash #{key}", id: "#{key}") %>
    <% end %>
  <% end %>
</div>
