<div id="<%= dom_id site %>">

  <div class="py-2">
    <label class="body-lg-medium-text">
      Title:
    </label>
    <div class="body-lg-text inline-block">
      <%= site.title %>
    </div>
  </div>

  <div class="py-2">
    <label class="body-lg-medium-text">
      Address:
    </label>
    <div class="body-lg-text inline-block">
      <%= site.address %>
    </div>
  </div>

  <div class="py-2">
    <label class="body-lg-medium-text">
      Programs:
    </label>
    <% @programs.each do |program| %>
      <div>
        <% if policy(Program).edit? %>
          <%= link_to program.display_name_with_title, program_path(program), class: "link_to" %>
        <% else %>
          <%= program.display_name_with_title %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="py-2">
    <label class="body-lg-medium-text">
      Contacts:
    </label>
    <% @site_contacts.each do |site_contact| %>
      <div>
        <% if policy(SiteContact).edit? %>
          <%= link_to site_contact.display_name, site_contact_path(site_contact), class: "link_to" %>
        <% else %>
          <%= site_contact.display_name %>
        <% end %>
      </div>
    <% end %>
  </div>


  <% if action_name != "show" %>
    <%= link_to "Show this site", site, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this site', edit_site_path(site), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
