<div id="<%= dom_id site %>">

  <div class="py-2">
    <label class="body-lg-medium-text">
      Title:
    </label>
    <div class="body-lg-text inline-block">
      <%= site.title %>
    </div>
  </div>

  <div class="py-2">
    <label class="body-lg-medium-text">
      Address:
    </label>
    <div class="body-lg-text inline-block">
      <%= site.address %>
    </div>
  </div>


  <% if action_name != "show" %>
    <%= link_to "Show this site", site, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this site', edit_site_path(site), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
