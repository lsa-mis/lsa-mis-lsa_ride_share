<div id="<%= dom_id site %>">

  <div class="py-2">
    <label class="body-lg-medium-text">
      Address:
    </label>
    <div class="body-lg-text inline-block">
      <%= site.address %>
    </div>
  </div>
  <div class="flex items-center gap-2">
    <div class="py-2">
      <label class="body-lg-medium-text">
        Contacts:
      </label>
      <div class="body-lg-text ml-2">
        <% @site_contacts.each do |site_contact| %>
          <div>
              <%= site_contact.display_name %>
          </div>
        <% end %>
      </div>
    </div>
    <% if policy(SiteContact).edit? %>
      <div class="py-2">
        <%= link_to 'Edit Contacts', site_site_contacts_path(@site), class: "primary_button" %>
      </div>
    <% end %>
  </div>

  <div class="py-2">
    <label class="body-lg-medium-text">
      Programs:
    </label>
    <div class="body-lg-text ml-2">
      <% @programs.each do |program| %>
        <div>
          <% if policy(Program).edit? %>
            <%= link_to program.display_name_with_title, program_path(program), class: "link_to" %>
          <% else %>
            <%= program.display_name_with_title %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

</div>
