<%= turbo_frame_tag 'contacts' do %>
  <div class="min-w-full">
    <table class="mi_table">
      <thead class="border border-l-0 border-r-0 border-gray-um60">
        <tr>
          <th class="header_th">Title</th>
          <th class="header_th">First Name</th>
          <th class="header_th">Last Name</th>
          <th class="header_th">Phone Number</th>
          <th class="header_th">Email</th>
          <td></td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr class="mi_tbody_tr">
            <td class="mi_tbody_td">
              <%= contact.title %>
            </td>
            <td class="mi_tbody_td">
              <%= contact.first_name %>
            </td>
            <td class="mi_tbody_td">
              <%= contact.last_name %>
            </td>
            <td class="mi_tbody_td">
              <%= contact.phone_number %>
            </td>
            <td class="mi_tbody_td">
              <%= contact.email %>
            </td>
            <td class="mi_tbody_td">
              <%= link_to 'Edit', edit_site_contact_path(@site, contact), class: "link_to" %>
            </td>
            <td class="mi_tbody_td">
              <%= link_to "Remove", site_contact_path(@site, contact), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: "link_to" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
