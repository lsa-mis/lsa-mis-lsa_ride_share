:"data-action" => "change->autosubmit#search"<%= turbo_frame_tag 'cars' do %>
  <div class="min-w-full">
    <table class="mi_table" id="desk-table">
      <thead class="border border-l-0 border-r-0 border-gray-um60">
        <tr>
          <th class="header_th">Car Number</th>
          <th class="header_th">Make</th>
          <th class="header_th">Model</th>
          <th class="header_th">Color</th>
          <th class="header_th">Number of Seats</th>
          <th class="header_th">Parking Spot</th>
          <th class="header_th">Last Vehicle Report Date</th>
          <th class="header_th">Vehicle Reports</th>
          <th class="header_th">Car Status</th>
        </tr>
      </thead>
      <tbody>
        <% @cars.each do |car| %>
          <% if car.status == 'unavailable' %>
            <tr class="mi_tbody_tr bg-gray-um10">
          <% else %>
            <tr class="mi_tbody_tr">
          <% end %>
            <td class="mi_tbody_td">
              <%= link_to car.car_number, car_path(car), class: "link_to", data: {turbo_frame: "_top"} %>
            </td>
            <td class="mi_tbody_td">
              <%= car.make %>
            </td>
            <td class="mi_tbody_td">
              <%= car.model %>
            </td>
            <td class="mi_tbody_td">
              <%= car.color %>
            </td>
            <td class="mi_tbody_td">
              <%= car.number_of_seats %>
            </td>
            <td class="mi_tbody_td">
              <%= car.parking_spot %>
            </td>
            <td class="mi_tbody_td">
              <% if car.vehicle_reports_ids.present? %>
                <%= show_date(car.last_vehicle_report.updated_at) %>
              <% end %>
            </td>
            <td class="mi_tbody_td">
              <% if car.vehicle_reports_ids.present? %>
                <%= link_to 'Vehicle Reports', vehicle_reports_path(car_id: car.id), class: 'link_to', data: {turbo_frame: "_top"} %>
              <% end %>
            </td>
            <td class="mi_tbody_td <%= "#{car.status}" %>">
              <%= car.status.titleize %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <table id="phone-table">
      <% @cars.each do |car| %>
        <tr class="mi_tbody_tr">
          <th class="header_mobile">Car Number</th>
          <td class="mi_tbody_td">
            <%= link_to car.car_number, car_path(car), class: "link_to", data: {turbo_frame: "_top"} %>
          </td>
        </tr>
        <tr class="mi_tbody_tr">
          <th class="header_mobile">Make</th>
          <td class="mi_tbody_td">
            <%= car.make %>
          </td>
        </tr>
        <tr class="mi_tbody_tr">
          <th class="header_mobile">Model</th>
          <td class="mi_tbody_td">
            <%= car.model %>
          </td>
        </tr>
        <tr class="mi_tbody_tr">
          <th class="header_mobile">Color</th>
          <td class="mi_tbody_td">
            <%= car.color %>
          </td>
        </tr>
        <tr class="mi_tbody_tr">
          <th class="header_mobile">Number of Seats</th>
          <td class="mi_tbody_td">
            <%= car.number_of_seats %>
          </td>
        </tr>
        <tr class="mi_tbody_tr">
          <th class="header_mobile">Parking Spot</th>
          <td class="mi_tbody_td">
            <%= car.parking_spot %>
          </td>
        </tr>
        <tr class="mi_tbody_tr">
          <th class="header_mobile">Last Vehicle Report Date</th>
          <td class="mi_tbody_td">
            <% if car.vehicle_reports_ids.present? %>
              <%= show_date(car.last_vehicle_report.updated_at) %>
            <% end %>
          </td>
        </tr>
        <tr class="mi_tbody_tr">
          <th class="header_mobile">Vehicle Reports</th>
          <td class="mi_tbody_td">
            <% if car.vehicle_reports_ids.present? %>
              <%= link_to 'Vehicle Reports', vehicle_reports_path(car_id: car.id), class: 'link_to', data: {turbo_frame: "_top"} %>
            <% end %>
          </td>
        </tr>
        <tr class="mobile_tr">
          <th class="header_mobile">Car Status</th>
          <td class="mi_tbody_td <%= "#{car.status}" %>">
            <%= car.status.titleize %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
