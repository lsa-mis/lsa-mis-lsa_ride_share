<div class="mx-auto w-full">
  <div class="grid grid-cols-1 lg:grid-cols-2">
    <h1>Car Number: <%= @car.car_number %></h1>
    <div class="lg:grid lg:justify-items-end">
      <div class="py-2">
        <%= link_to 'Edit car', edit_car_path(@car), class: "primary_button" %>
      </div>
    </div>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-3">
    <div class="grid lg:col-span-2">
      <%= render @car %>
    </div>
  </div>

  <div class="grid grid-cols-q lg:grid-cols-2 gap-10 mb-6">
    <div>
      <h2>Vehicle Reports</h2>
      <div>
        <div class="grid lg:col-span-2">
          <%= render 'vehicle_reports' %>
        </div>
      </div>
    </div>
    <div>
      <div>
        <h2>Reservations</h2>
        <div>
          <div class="grid lg:col-span-2">
            <%= render 'reservations' %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
