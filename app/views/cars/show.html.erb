<div class="mx-auto w-full">
  <div class="grid grid-cols-1 lg:grid-cols-2">
    <h1 class="mb-4">Car Number: <%= @car.car_number %></h1>
    <div class="lg:grid lg:justify-items-end">
      <div class="py-2">
        <%= link_to 'Edit Car', edit_car_path(@car), class: "primary_button" %>
      </div>
    </div>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-2">
    <div class="grid lg:col-span-2">
      <%= render @car %>
    </div>
  </div>

  <div class="container p-2 rounded-lg shadow-lg text-xl mb-20 bg-gray-50">
    <h2 class="mb-4">Notes:</h2>
    <% if user_signed_in? %>
      <%= render partial: "notes/form", locals: { note: Note.new, noteable: @car } %>
    <% end %>
    
    <%= turbo_stream_from @car, :notes %>
    <%= tag.div id: "#{dom_id(@car)}_notes" do %>
      <%= render @car.notes %>
    <% end %>
  </div>

  <div class="grid grid-cols-q lg:grid-cols-2 gap-10 my-6">
    <div>
      <h2 class="mb-4">Vehicle Reports</h2>
      <div>
        <div class="grid lg:col-span-2">
          <%= render 'vehicle_reports' %>
        </div>
      </div>
    </div>
    <div>
      <div>
        <h2 class="mb-4">Reservations</h2>
        <div>
          <div class="grid lg:col-span-2">
            <%= render 'reservations' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
