<div id="<%= dom_id car %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Car number:</strong>
    <%= car.car_number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Make:</strong>
    <%= car.make %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Model:</strong>
    <%= car.model %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Color:</strong>
    <%= car.color %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Number of seats:</strong>
    <%= car.number_of_seats %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Mileage:</strong>
    <%= car.mileage %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gas:</strong>
    <%= car.gas %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Parking spot:</strong>
    <%= car.parking_spot %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last used:</strong>
    <%= car.last_used %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last checked:</strong>
    <%= car.last_checked %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last driver:</strong>
    <%= car.last_driver %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this car", car, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this car', edit_car_path(car), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
