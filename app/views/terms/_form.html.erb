<%= form_with(model: term, class: "contents") do |form| %>
  <% if term.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(term.errors.count, "error") %> prohibited this term from being saved:</h2>

      <ul>
        <% term.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :code, 'Code *', class: "fancy_label" %>
    <%= form.text_field :code, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :name, 'Name *', class: "fancy_label" %>
    <%= form.text_field :name, class: "input_text_field" %>
  </div>

  <div class="my-5">
    <%= form.label :term_start, 'Start Date *', class: "fancy_label" %>
    <%= form.date_field :term_start, class: "input_text_field" %>
  </div>

  <p class="body-text mb-2">
    For this application the End Date of a term should be the date one day before the Start Date of the next term.
  </p>

  <div class="my-5">
    <%= form.label :term_end, 'End Date *', class: "fancy_label" %>
    <%= form.date_field :term_end, class: "input_text_field" %>
  </div>

  <div class="inline">
    <%= form.submit class: "primary_button" %>
  </div>
  <%= link_to terms_path do %>
    <span class="tertiary_button">Cancel
    <i class="fa fa-times" aria-hidden="true"></i>
    </span>
  <% end %>
<% end %>
