<%= turbo_frame_tag 'new_site' do %>
  <%= form_for [@site_program, site] do |form| %>
    <% if site.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

        <ul>
          <% site.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :title, 'Title *', class: "fancy_label"  %>
      <%= form.text_field :title, placeholder: "Title", class: "input_text_field" %>
    </div>

    <div class="md:flex gap-2 w-full">
      <div class="my-5">
        <%= form.label :address1, 'Address 1 *', class: "fancy_label"  %>
        <%= form.text_field :address1, placeholder: "Address1", class: "input_text_field" %>
      </div>

      <div class="my-5">
        <%= form.label :address2, 'Address 2', class: "fancy_label"  %>
        <%= form.text_field :address2, placeholder: "Address2", class: "input_text_field" %>
      </div>

      <div class="my-5">
        <%= form.label :city, 'City *', class: "fancy_label"  %>
        <%= form.text_field :city, placeholder: "City", class: "input_text_field" %>
      </div>

      <div class="my-5">
        <label for="state" class="fancy_label">State *</label>
        <%= form.select(:state, options_for_select(us_states), { include_blank: "Select State" }, { class: "input_text_field" }) %>
      </div>

      <div class="my-5">
        <%= form.label :zip_code, 'Zip Code *', class: "fancy_label"  %>
        <%= form.text_field :zip_code, placeholder: "Zip Code", class: "input_text_field" %>
      </div>
    </div>

    <%= form.hidden_field :unit_id, value: @site_program.unit_id %>

    <div class="my-5 body-lg-text">
      Add/edit site's contacts on the site' show page
    </div>

    <div class="my-2">
      <label for="site_id" class="fancy_label">Select a Site</label>
      <%= select_tag "site_id", options_from_collection_for_select(@all_sites, :id, :title), include_blank: "Select", class: "input_text_field" %>
    </div>

    <div class="my-2">
      <%= form.submit "Add Site to Program", class: "secondary_blue_button", data: { "turbo-frame": "_top" } %>
      <%= link_to edit_program_sites_path(@site_program) do %>
        <span class="tertiary_button">Cancel
        <i class="fa fa-times" aria-hidden="true"></i>
        </span>
      <% end %>
    </div>
  <% end %>
<% end %>
