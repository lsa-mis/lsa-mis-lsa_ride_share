<%= form_for [@program_manager_program, @program_manager] do |form| %>


  <div class="my-5">
    <%= form.label :uniqname %>
    <%= form.text_field :uniqname, required: true, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit "Add Manager", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
  <div class="inline">
    <%= link_to program_path(@program_manager_program) do %>
      <span class="tertiary_button">Cancel
      <i class="fa fa-times" aria-hidden="true"></i>
      </span>
    <% end %>
  </div>
<% end %>
