<div class="mx-auto md:w-2/3 w-full">
  <div>




    <h1><%= @program.title %></h1>

    <div class="grid grid-cols-2">
    
      <%= render @program %>
      <div class="grid justify-items-end">
    
        
        <div class="">
          <%= link_to 'Edit program', program_data_path(@program), class: "primary_button" %>
        </div>
        <% if @program.config_questions.present? %>
          <div class="">
          <%= link_to 'Questions to instructor', program_config_questions_path(@program), class: "secondary_blue_button" %>
        </div>
        <% end %>
        <div class="">
          <%= link_to 'Students', students_path, class: "secondary_blue_button" %>
        </div>
      </div>
    
    </div>
  






  </div>
  <h2>Cars Available</h2>
  <div>
    <%= turbo_frame_tag "cars_list" do %>
      <%= render "cars_list", locals: { program: @program} %>
    <% end %>
  </div>
  <h2>Sites</h2>
  <div>
    <%= turbo_frame_tag "sites_list" do %>
      <%= render "sites_list", locals: { program: @program} %>
    <% end %>
  </div>

  <% if @program.add_managers %>
    <h2>Managers</h2>
    <div>
      <%= turbo_frame_tag "managers_list" do %>
        <%= render "managers_list", locals: { program: @program} %>
      <% end %>
    </div>
  <% end %>
</div>

