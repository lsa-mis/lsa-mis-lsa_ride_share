<% if @program.cars.present? %>
  <% @program.cars.each do |car| %>
    <div class="flex items-center justify-between text-sm m-2">
      <div class="w-0 flex-1 flex items-center">
        <%= link_to car.car_number, car_path(car), class: "link_to"  %>
      </div>
      <div class="flex-1 w-0 truncate">
        <%= car.car_number %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="m-2 flex-1 truncate body-lg-text">
    The program currently does not have any cars.
  </div>
<% end %>
