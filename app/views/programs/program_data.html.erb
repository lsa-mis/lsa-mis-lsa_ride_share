<div class="mx-auto md:w-2/3 w-full">

  <h1><%= @program.title %></h1>

  <div class="grid grid-cols-2">
    <div>
      <%= render @program %>
      <div class="m-4">
        <%= link_to edit_program_path(@program) do %>
          <span class="tertiary_button">Edit Program Information
            <i class="fa-solid fa-chevron-right"></i>
          </span>
        <% end %>
      </div>
    </div>
    <div class="grid justify-items-end">
      <div class="">
        <%= link_to 'Exit Edit Page', program_path(@program), class: "primary_button" %>
      </div>
    </div>
  </div>

  <div>
      <%= render 'program_car' %>
      <%= render 'program_site' %>
      <% if @program.add_managers %>
        <%= render 'program_manager' %>
      <% end %>
  </div>

</div>
