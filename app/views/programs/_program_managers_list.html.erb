<% if @program.program_managers.present? %>
  <% @program.program_managers.each do |program_manager| %>
    <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm">
      <div class="w-0 flex-1 flex items-center">
        <div class="ml-2 flex-1 w-0 truncate">
          <%= link_to program_manager.display_name, program_program_manager_path(program_manager), class: "link_to"  %>
        </div>
        <div class="ml-2 flex-1 w-0 truncate">
          <%= program_manager.display_name %>
        </div>
      </div>
      <div class="ml-4 flex-shrink-0 flex space-x-4">
        <%= link_to edit_program_program_manager_path(@program, program_manager) do %>
          <span class="tertiary_button">Edit
            <i class="fa-solid fa-chevron-right"></i>
          </span>
        <% end %>
      </div>
      <div class="ml-4 flex-shrink-0 flex space-x-4">
        <%= link_to 'Remove', remove_program_manager_path(@program, program_manager), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: "delete_button" %>
      </div>
    </li>
  <% end %>
<% else %>
  <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm">
    <div class="w-0 flex-1 flex items-center">
      <span class="ml-2 flex-1 w-0 truncate">
        The program currently does not have any program_managers.
      </span>
    </div>
  </li>
<% end %>
