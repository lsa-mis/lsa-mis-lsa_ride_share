<div class="w-full">
  <div class="flex flex-row items-center justify-between m-2">
    <div>
      <h1> Student List</h1>
    </div>
    <div class="flex flex-row justify-between gap-2">
      <div>
        <%= link_to 'Update Student List', update_student_list_path(@student_program), class: "secondary_blue_button" %>
      </div>
      <div>
        <%= link_to 'Update MVR status', update_mvr_status_path(@student_program), class: "secondary_blue_button" %>
      </div>
      <div>
        <%= link_to 'Update Canvas status', canvas_results_path(@student_program), class: "secondary_blue_button" %>
      </div>
    </div>
  </div>

  <p class="my-5">
  <strong class="block font-medium mb-1">Program:</strong>
  <%= link_to @student_program.display_name, program_path(@student_program), class: "link_to" %>
  </p>

  <div id="students" class="min-w-full">
    <table class="mi_table">
      <thead class="mi_thead">
        <tr>
          <th class="header_th">  </th>
          <th class="header_th">  </th>
          <th class="header_th"> Uniqname </th>
          <th class="header_th"> Last name </th>
          <th class="header_th"> First name </th>
          <th class="header_th"> MVR status </th>
          <th class="header_th"> Class training date </th>
          <th class="header_th"> Canvas course complete date </th>
          <th class="header_th"> Meeting with admin date </th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr class="mi_tbody_tr">
            <td class="mi_tbody_td">
              <%= link_to "View", program_students_path(@student_program), class: "link_to" %>
            </td>
            <td class="mi_tbody_td">
              <%= link_to 'Edit', program_students_path(@student_program), class: "link_to" %>
            </td>
            <td class="mi_tbody_td">
                <%= student.uniqname %>
            </td>
            <td class="mi_tbody_td">
                <%= student.last_name %>
            </td>
            <td class="mi_tbody_td">
                <%= student.first_name %>
            </td>
            <td class="mi_tbody_td">
                <%= student.mvr_status %>
            </td>
            <td class="mi_tbody_td">
                <%= student.class_training_date %>
            </td>
            <td class="mi_tbody_td">
                <%= student.canvas_course_complete_date %>
            </td>
            <td class="mi_tbody_td">
                <%= student.meeting_with_admin_date %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
