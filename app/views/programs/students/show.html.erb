<div class="mx-auto w-full">
  <h1 class="mb-4"><%= @student_program.display_name_with_title %></h1>
  <div class="grid grid-cols-1 lg:grid-cols-2">
    <%= render @student %>
    <div class="lg:grid lg:justify-items-end">
      <div class="py-2">
        <%= link_to 'Edit Student', edit_program_student_path(@student_program, @student), class: "primary_button" %>
      </div>
      <div class="py-2">
        <%= link_to 'Update MVR Status', update_student_mvr_status_path(@student_program, @student), class: "secondary_blue_button" %>
      </div>
      <div class="py-2">
        <%= link_to 'Update Canvas Status', student_canvas_result_path(@student_program, @student), class: "secondary_blue_button" %>
      </div>
      <div class="py-2">
        <%= link_to 'Back to Student List', program_students_path(@student_program), class: "secondary_blue_button" %>
      </div>
    </div>
  </div>
  
</div>

<div class="container p-2 rounded-lg shadow-lg text-xl mb-20 bg-gray-50">
  <h2 class="mb-4">Notes:</h2>
  <% if user_signed_in? %>
    <%= render partial: "notes/form", locals: { note: Note.new, noteable: @student } %>
  <% end %>

  <%= turbo_stream_from @student, :notes %>
  <%= tag.div id: "#{dom_id(@student)}_notes" do %>
    <%= render @student.notes %>
  <% end %>
</div>
