<%= turbo_frame_tag 'new_student' do %>
  <%= form_for [@student_program, student] do |form| %>
    <% if student.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h3><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h3>
        <ul>
          <% student.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="sm:flex gap-2 items-end">
      <div class="">
        <%= form.label :uniqname, "Uniqname *", class: "fancy_label" %>
        <%= form.text_field :uniqname, required: true, class: "input_text_field" %>
      </div>
      <div class="">
        <%= form.submit 'Add Student', class: "secondary_blue_button" %>
      </div>
    </div>
  <% end %>
<% end %>
