<div class="mt-2">
  <p class="body-bold-text">
    <%= student.display_name %>
  </p>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Mvr Status:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= student.mvr_status %>
    </p>
  </div>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Canvas course complete date:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= show_date(student.canvas_course_complete_date) %>
    </p>
  </div>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Class training date:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= show_date(student.class_training_date) %>
    </p>
  </div>

  <div class="py-2">
    <label class="body-lg-bold-text">
      Meeting with admin date:
    </label>
    <p class="body-lg-text ml-2 inline-block">
      <%= show_date(student.meeting_with_admin_date) %>
    </p>
  </div>

</div>
